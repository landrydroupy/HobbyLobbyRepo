@model IEnumerable<hobby_lobby_test.Models.Pickup>

@{
    ViewBag.Title = "ManagePickups";
}

<h2>ManagePickups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
       <th>
           @Html.DisplayNameFor(model => model.PickupNumber)
       </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ScheduledDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickupCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Truck.TruckNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.PickupNumber)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickupCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Truck.TruckNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PickupNumber })           
            @Html.ActionLink("Delete", "Delete", new { id = item.PickupNumber })
            
        </td>
    </tr>
}

</table>
