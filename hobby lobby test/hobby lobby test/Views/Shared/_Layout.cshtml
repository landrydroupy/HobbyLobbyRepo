<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 0px;">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd; padding-top:0;">
        <div class="container">
            <a class="navbar-brand" style="color: #e3f2fd">
                <img src="https://upload.wikimedia.org/wikipedia/commons/4/4c/Hobby_Lobby_logo.svg" width="150px" height="auto" alt="Hobby Lobby Logo">
               ignore
            </a>
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="padding-top: 8px;">
            <div class="navbar-nav">
                <a class="nav-link" aria-current="page" style="border-radius: 20px; background-color: white; opacity: .7; margin: 5px; " href="/Home">Home</a>
                <a class="nav-link" style="border-radius: 20px; background-color: white; opacity: .7; margin: 5px;" href="/Stores">Store</a>
                <a class="nav-link" style="border-radius: 20px; background-color: white; opacity: .7; margin: 5px;" href="/Requests/Index">Transportation</a>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align: center;">
            <p>&copy; @DateTime.Now.Year - Business Programming Project - Group 5</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundle/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
